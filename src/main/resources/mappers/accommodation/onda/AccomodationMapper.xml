    <select id="accommUpdate" parameterType="map" resultType="String">
        EXEC spGW_CONDO_REGIST_SUPPLIER #{accommDetail.strAccommId}, #{accommDetail.strApiFlag}, #{accommDetail.strAcmName}, #{accommDetail.strZipCode}
        , #{accommDetail.strAddress}, #{accommDetail.strConAddrNew}, #{accommDetail.strConTel}, #{accommDetail.strConFax}, '', '', #{accommDetail.strLoc}, '', #{accommDetail.strTimeIn}, #{accommDetail.strTimeOut}, #{accommDetail.strConDisplay}
        , #{accommDetail.decLng}, #{accommDetail.decLat}, #{accommDetail.strUsageNotice}, #{accommDetail.strCity}, #{accommDetail.strNation}, #{accommDetail.strSummary}, '', '', #{accommDetail.strTagName}, #{strImgData}, #{strPenaltyData}, '', '', '', '', ''
    </select>

    <select id="roomTypeRegist" parameterType="ToconDto" resultType="String">
        EXEC spGW_ROOMTYPE_REGIST_SUPPLIER 0, #{tocode}, #{conId}, ${standpeopleCnt}, ${standpeopleCnt}, #{roomTypeId}, ${admin_count}, #{strIngYN}, #{tocodeText}, '', ''
    </select>

    <select id="getRoomAdminCnt" parameterType="String" resultType="int">
        SELECT ISNULL(MAX(admin_count), 1)
        FROM test_room_type RT WITH(NOLOCK)
            JOIN test_condo C WITH(NOLOCK) ON RT.intCondoID = C.intCondoID
        WHERE C.accomm_id = #{propertyId}
    </select>

    <select id="ratePlanRegist" parameterType="RatePlanDto" resultType="String">
        EXEC spGW_RATEPLAN_REGIST_SUPPLIER 0, ${intConId}, #{strAccommId}, ${intToconIdx}, #{strRoomTypeId}, #{strRatePlanId}, #{strRatePlanId}, #{bedTypeCode}, #{strMealCode}, ${intMinPersons}, ${intMaxPersons}, 0, ''
    </select>

    <select id="getIdxsByRatePlanId" resultType="StockDto">
        SELECT
            intRateID,
            intCondoID,
            intRoomID
        FROM test_rate_plan
        WHERE strRatePlanId = ${strRatePlanId}
    </select>

    <select id="insertGoods" parameterType="StockDto" resultType="String">
        EXEC spGW_GOODS_REGIST_SUPPLIER ${intCondoID}, ${intRoomID}, ${intRateID}, ${intStock}, #{strCheckInDate}, ${intBasicPrice}, ${intSalePrice}, ${intMinStay}, ${intMaxStay}, ''
    </select>

    <select id="accommRegistTotal" parameterType="String" resultType="String">
        EXEC spGW_CONDO_REGIST_TOTAL #{strAccommId}, #{API_FLAG}, #{strCondoName}, #{strConZip}
        , #{strConAddr1}, #{strConAddr2}, #{strConTel}, #{strConFax}, #{strConGekNum}, #{strConFlag}, #{strLocation}, #{strHomepage}
        , #{strTimeIn}, #{strTimeOut}, #{strConDisplay}, #{strMapX}, #{strMapY}, #{strMobileWarning}, #{strCity}, #{strNation}
        , #{strConDesc}, #{strConAround}, #{strConSookbak}, #{strTagName}, #{strImgData}, #{strPenaltyData}, #{strRoomNRatePlanDatas}, ''
    </select>

</mapper>